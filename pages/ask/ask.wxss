/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 40rpx
}

.button-choice {
  width: 500rpx;
  height: 128rpx;
  margin: 30rpx;
  border-radius: 5%;
}

.success-pop{
  position: absolute;
  left: 50%;
  top: 20%;
  margin-left: -280rpx;
  padding: 78rpx 0;
  width: 560rpx;
  /*height: 420rpx;*/
  background: #fff;
  border-radius: 12rpx;
  font-size: 32rpx;
  color: #000;
}

.success-pop .title{
  margin:  0 0 28rpx;
  font-size: 32rpx;
  text-align: center;
}

.success-pop .tips-content{
  margin:  0 0 48rpx;
  font-size: 32rpx;
  text-align: center;
}

.success-pop .button{
  margin: 0 auto;
  width: 360rpx;
  height: 76rpx;
  border-radius: 40rpx;
  line-height: 76rpx;
  font-size: 32rpx;
}

.confirm-pop{
  position: absolute;
  left: 50%;
  top: 20%;
  margin-left: -280rpx;
  padding: 78rpx 0;
  width: 560rpx;
  /*height: 420rpx;*/
  background: #fff;
  border-radius: 12rpx;
  font-size: 32rpx;
  color: #000;
}

.confirm-pop .title{
  margin:  0 0 28rpx;
  font-size: 32rpx;
  text-align: center;
}

.confirm-pop .tips-content{
  margin:  0 0 48rpx;
  font-size: 32rpx;
  text-align: center;
}

.confirm-pop .button-wrap .button{
  margin: 0 auto;
  width: 360rpx;
  height: 76rpx;
  border-radius: 40rpx;
  line-height: 76rpx;
  font-size: 32rpx;
}

.confirm-pop .button-wrap .button.top{
  background: #ffa500;
}

.confirm-pop .button-wrap .button.down{
  margin-top: 30rpx;
}

.text-title{
  font-size: 100rpx;
}
